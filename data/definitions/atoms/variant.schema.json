{
  "$schema": "https://json-schema.org/draft-07/schema",
  "definitions": {
    "move": { "$ref": "./move.schema.json" },
    "fen": {
      "$ref": "./fen.schema.json"
    }
  },

  "title": "Variant",
  "description": "A variant in chess with a starting position and a list of moves",
  "type": "object",
  "properties": {
    "displayName": {
      "type": "string",
      "description": "The display name of the variant"
    },
    "fen": {
      "$ref": "#/definitions/fen",
      "description": "The starting position of the variant"
    },
    "moves": {
      "type": "array",
      "description": "The moves of the variant",
      "items": {
        "$ref": "#/definitions/move"
      }
    }
  },
  "required": ["fen", "moves"]
}
