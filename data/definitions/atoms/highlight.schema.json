{
  "$schema": "https://json-schema.org/draft-07/schema",
  "definitions": {
    "move": { "$ref": "./move.schema.json" },
    "fen": {
      "$ref": "./fen.schema.json"
    }
  },

  "title": "Highlight",
  "description": "Highlight in chessboard",
  "type": "object",
  "properties": {
    "from": {
      "type": "string",
      "description": "The starting square of the highlight",
      "pattern": "^[a-h][1-8]$"
    },
    "to": {
      "type": "string",
      "description": "The ending square of the highlight",
      "pattern": "^[a-h][1-8]$"
    },
    "color": {
      "type": "string",
      "description": "The color of the highlight",
      "enum": ["blue", "green", "red", "yellow"]
    }
  },
  "required": ["from"]
}
