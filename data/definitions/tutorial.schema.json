{
  "$schema": "https://json-schema.org/draft-07/schema",
  "definitions": {
    "move": {
      "$ref": "./atoms/move.schema.json"
    },
    "fen": {
      "$ref": "./atoms/fen.schema.json"
    },
    "variant": {
      "$ref": "./atoms/variant.schema.json"
    },
    "highlight": {
      "$ref": "./atoms/highlight.schema.json"
    }
  },
  "title": "Tutorial",
  "description": "A chess tutorial",
  "type": "object",
  "properties": {
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "fen": {
            "$ref": "#/definitions/fen"
          },
          "move": {
            "$ref": "#/definitions/move",
            "description": "The move to play in the step"
          },
          "autoPlay": {
            "type": "boolean",
            "description": "If true, the step will be played automatically (it should be true for computer moves)"
          },
          "comment": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "type": "object",
                  "description": "Text",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["text"]
                    },
                    "value": {
                      "type": "string"
                    }
                  }
                },
                {
                  "type": "object",
                  "description": "Variant",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["variant"]
                    },
                    "value": {
                      "$ref": "#/definitions/variant"
                    }
                  }
                }
              ]
            }
          },
          "hints": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "highlight": {
                  "$ref": "#/definitions/highlight"
                }
              }
            }
          },
          "highlights": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/highlight"
            }
          }
        },
        "required": ["fen"]
      }
    }
  }
}
